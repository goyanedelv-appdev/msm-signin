<div>
  <div>
    <h1>
      <%= @current_user.first_name %>'s bookmarks
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new bookmark
    </h2>

    <form action="/insert_bookmark" method="post">
        <select name="query_movie_id" id="movie_id_box">
          <% Movie.all.each do |movie| %>
            <option value="<%= movie.id %>">
              <%= movie.title %>
            </option>
          <% end %>

        </select>
      <button>
        Bookmark this movie!
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>

        <th>
          Movie
        </th>

        <th>
          Created at
        </th>


        <th>
        </th>
      </tr>

      <% @list_of_bookmarks.each do |a_bookmark| %>
      <tr>

        <td>
          <a href="movies/<%= a_bookmark.movie_id %>">
          <%= Movie.where({:id => a_bookmark.movie_id}).at(0).title %>
          </a>
        </td>

        <td>
          <%= time_ago_in_words(a_bookmark.created_at) %> ago
        </td>

        <td>
          <a href="/delete_bookmark/<%= a_bookmark.id %>">
            Un-bookmark
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
